@page "/Chargers"
@using EVCS.BlazorWebApp.TriNM.GraphQLClient
@using EVCS.BlazorWebApp.TriNM.Models
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Components
@using System.Linq
@inject GraphQLConsumer GraphQLConsumer

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">Chargers Management</h3>
                </div>
                <div class="card-body">
                    <!-- Filter Section -->
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label for="stationFilter" class="form-label">Filter by Station</label>
                            <select id="stationFilter" class="form-select" value="@selectedStationId" @onchange="OnStationChanged">
                                <option value="">All Stations</option>
                                @foreach (var station in stations)
                                {
                                    <option value="@station.StationTriNMId">@station.StationTriNMName - @station.Address</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <button class="btn btn-outline-primary me-2" @onclick="LoadChargers">
                                <i class="fas fa-search"></i> Search
                            </button>
                            <button class="btn btn-outline-secondary" @onclick="ClearFilters">
                                <i class="fas fa-times"></i> Clear
                            </button>
                        </div>
                    </div>

                    <!-- Loading indicator -->
                    @if (isLoading)
                    {
                        <div class="text-center">
                            <div class="spinner-border" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    }
                    else
                    {
                        <!--ChargerTriNMs Table -->
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Charger Type</th>
                                        <th>Station Name</th>
                                        <th>Available</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (chargers != null && chargers.Any())
                                    {
                                        @foreach (var charger in chargers)
                                        {
                                            <tr>
                                                <td>@charger.ChargerTriNMId</td>
                                                <td>@charger.ChargerTriNMType</td>
                                                <td>@charger.StationTriNM?.StationTriNMName</td>
                                                <td>
                                                    <span class="badge @(charger.IsAvailable ? "bg-success" : "bg-danger")">
                                                        @(charger.IsAvailable ? "Available" : "Unavailable")
                                                    </span>
                                                </td>
                                                <td>
                                                    <a href="/Chargers/@charger.ChargerTriNMId" class="btn btn-sm btn-outline-info">
                                                        <i class="fas fa-eye"></i> View
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="5" class="text-center">No Chargers found</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        @if (totalPages > 1)
                        {
                            <nav aria-label="Page navigation">
                                <ul class="pagination justify-content-center mt-3">
                                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                        <button class="page-link" @onclick="() => GoToPage(currentPage - 1)" disabled="@(currentPage == 1)">
                                            Previous
                                        </button>
                                    </li>
                                    @for (int i = 1; i <= totalPages; i++)
                                    {
                                        var pageNum = i;
                                        <li class="page-item @(currentPage == pageNum ? "active" : "")">
                                            <button class="page-link" @onclick="() => GoToPage(pageNum)">
                                                @pageNum
                                            </button>
                                        </li>
                                    }
                                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                        <button class="page-link" @onclick="() => GoToPage(currentPage + 1)" disabled="@(currentPage == totalPages)">
                                            Next
                                        </button>
                                    </li>
                                </ul>
                            </nav>
                            <div class="text-center text-muted">
                                Showing @((currentPage - 1) * pageSize + 1) to @(Math.Min(currentPage * pageSize, allChargers.Count)) of @allChargers.Count Chargers
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<ChargerTriNM> allChargers = new();
    private List<ChargerTriNM> chargers = new();
    private List<StationTriNM> stations = new();
    private int? selectedStationId = null;
    private bool isLoading = false;
    private int currentPage = 1;
    private const int pageSize = 10;
    private int totalPages => (int)Math.Ceiling((double)allChargers.Count / pageSize);

    protected override async Task OnInitializedAsync()
    {
        await LoadStations();
        await LoadChargers();
    }

    private async Task LoadStations()
    {
        try
        {
            var result = await GraphQLConsumer.GetStationsAsync();
            stations = result.ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading Stations: {ex.Message}");
        }
    }

    private async Task LoadChargers()
    {
        isLoading = true;
        try
        {
            if (selectedStationId.HasValue)
            {
                var result = await GraphQLConsumer.GetChargersByStationIdAsync(selectedStationId.Value);
                allChargers = result.ToList();
            }
            else
            {
                var result = await GraphQLConsumer.GetChargersAsync();
                allChargers = result.ToList();
            }
            UpdatePagedChargers();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading Chargers: {ex.Message}");
            allChargers = new List<ChargerTriNM>();
        }
        finally
        {
            isLoading = false;
        }
    }

    private void UpdatePagedChargers()
    {
        currentPage = 1;
        var skip = (currentPage - 1) * pageSize;
        chargers = allChargers.Skip(skip).Take(pageSize).ToList();
    }

    private void GoToPage(int page)
    {
        if (page >= 1 && page <= totalPages)
        {
            currentPage = page;
            var skip = (currentPage - 1) * pageSize;
            chargers = allChargers.Skip(skip).Take(pageSize).ToList();
        }
    }

    private async Task OnStationChanged(ChangeEventArgs e)
    {
        if (string.IsNullOrEmpty(e.Value?.ToString()))
        {
            selectedStationId = null;
        }
        else if (int.TryParse(e.Value.ToString(), out int stationId))
        {
            selectedStationId = stationId;
        }
        await LoadChargers();
    }

    private async Task ClearFilters()
    {
        selectedStationId = null;
        await LoadChargers();
    }
}

