@page "/Chargers/{id:int}"
@using EVCS.BlazorWebApp.TriNM.GraphQLClient
@using EVCS.BlazorWebApp.TriNM.Models
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Components
@inject GraphQLConsumer GraphQLConsumer
@inject NavigationManager Navigation

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">Charger Details</h3>
                    <a href="/Chargers" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
                <div class="card-body">
                    @if (isLoading)
                    {
                        <div class="text-center">
                            <div class="spinner-border" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    }
                    else if (charger != null)
                    {
                        <div class="row">
                            <div class="col-md-6">
                                <h5>Basic Information</h5>
                                <table class="table table-borderless">
                                    <tr>
                                        <td><strong>ID:</strong></td>
                                        <td>@charger.ChargerTriNMId</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Charger Type:</strong></td>
                                        <td>@charger.ChargerTriNMType</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Available:</strong></td>
                                        <td>
                                            <span class="badge @(charger.IsAvailable ? "bg-success" : "bg-danger")">
                                                @(charger.IsAvailable ? "Available" : "Unavailable")
                                            </span>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-md-6">
                                <h5>Station Information</h5>
                                <table class="table table-borderless">
                                    <tr>
                                        <td><strong>Station:</strong></td>
                                        <td>
                                            <a href="/Stations/@charger.StationTriNMId" class="text-decoration-none">
                                                @charger.StationTriNM?.StationTriNMName
                                            </a>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>Address:</strong></td>
                                        <td>@charger.StationTriNM?.Address</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        
                        @if (!string.IsNullOrEmpty(charger.ImageURL))
                        {
                            <div class="row mt-3">
                                <div class="col-12">
                                    <h5>Image</h5>
                                    <img src="@charger.ImageURL" alt="Charger Image" class="img-fluid" style="max-height: 300px;" />
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="alert alert-warning" role="alert">
                            Charger not found.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private ChargerTriNM? charger;
    private bool isLoading = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadCharger();
    }

    private async Task LoadCharger()
    {
        isLoading = true;
        try
        {
            charger = await GraphQLConsumer.GetChargerByIdAsync(Id);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading Charger: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }
}
