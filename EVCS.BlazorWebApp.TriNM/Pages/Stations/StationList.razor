@page "/Stations"
@using EVCS.BlazorWebApp.TriNM.GraphQLClient
@using EVCS.BlazorWebApp.TriNM.Models
@using EVCS.BlazorWebApp.TriNM.Services
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.JSInterop
@using System.Linq
@inject GraphQLConsumer GraphQLConsumer
@inject IJSRuntime JSRuntime
@inject StationSignalRService SignalRService
@implements IAsyncDisposable

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">Stations Management</h3>
                    <AuthorizeView>
                        <Authorized>
                            <a href="/Stations/Form" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Add New Station
                            </a>
                        </Authorized>
                    </AuthorizeView>
                </div>
                <div class="card-body">
                    <!-- Search Form -->
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label class="form-label">Search by Name</label>
                            <input type="text" class="form-control" @bind="searchName" @bind:event="oninput" @onkeyup="HandleSearchKeyUp" placeholder="Enter station name..." />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Search by Location</label>
                            <input type="text" class="form-control" @bind="searchLocation" @bind:event="oninput" @onkeyup="HandleSearchKeyUp" placeholder="Enter address, city, or province..." />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Status</label>
                            <select class="form-select" value="@searchIsActive" @onchange="HandleSearchChange">
                                <option value="">All</option>
                                <option value="true">Active</option>
                                <option value="false">Inactive</option>
                            </select>
                        </div>
                        <div class="col-md-1 d-flex align-items-end">
                            <button class="btn btn-secondary w-100" @onclick="ClearSearch">
                                <i class="fas fa-times"></i> Clear
                            </button>
                        </div>
                    </div>
                    @if (isLoading)
                    {
                        <div class="text-center">
                            <div class="spinner-border" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Code</th>
                                        <th>Name</th>
                                        <th>Address</th>
                                        <th>Capacity</th>
                                        <th>Available</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (stations != null && stations.Any())
                                    {
                                        @foreach (var station in stations)
                                        {
                                            <tr>
                                                <td>@station.StationTriNMId</td>
                                                <td>@station.StationTriNMCode</td>
                                                <td>@station.StationTriNMName</td>
                                                <td>@station.Address</td>
                                                <td>@station.Capacity</td>
                                                <td>@station.CurrentAvailable</td>
                                                <td>
                                                    <span class="badge @(station.IsActive ? "bg-success" : "bg-danger")">
                                                        @(station.IsActive ? "Active" : "Inactive")
                                                    </span>
                                                </td>
                                                <td>
                                                    <div class="btn-group" role="group">
                                                        <a href="/Stations/@station.StationTriNMId" class="btn btn-sm btn-outline-info">
                                                            <i class="fas fa-eye"></i> View
                                                        </a>
                                                        <AuthorizeView>
                                                            <Authorized>
                                                                <a href="/Stations/Form/@station.StationTriNMId" class="btn btn-sm btn-outline-warning">
                                                                    <i class="fas fa-edit"></i> Edit
                                                                </a>
                                                                <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteStation(station.StationTriNMId)">
                                                                    <i class="fas fa-trash"></i> Delete
                                                                </button>
                                                            </Authorized>
                                                        </AuthorizeView>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="8" class="text-center">No Stations found</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        @if (totalPages > 1)
                        {
                            <nav aria-label="Page navigation">
                                <ul class="pagination justify-content-center mt-3">
                                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                        <button class="page-link" @onclick="() => GoToPage(currentPage - 1)" disabled="@(currentPage == 1)">
                                            Previous
                                        </button>
                                    </li>
                                    @for (int i = 1; i <= totalPages; i++)
                                    {
                                        var pageNum = i;
                                        <li class="page-item @(currentPage == pageNum ? "active" : "")">
                                            <button class="page-link" @onclick="() => GoToPage(pageNum)">
                                                @pageNum
                                            </button>
                                        </li>
                                    }
                                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                        <button class="page-link" @onclick="() => GoToPage(currentPage + 1)" disabled="@(currentPage == totalPages)">
                                            Next
                                        </button>
                                    </li>
                                </ul>
                            </nav>
                            <div class="text-center text-muted">
                                Showing @((currentPage - 1) * pageSize + 1) to @(Math.Min(currentPage * pageSize, allStations.Count)) of @allStations.Count Stations
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<StationTriNM> allStations = new();
    private List<StationTriNM> stations = new();
    private bool isLoading = false;
    private int currentPage = 1;
    private const int pageSize = 10;
    private int totalPages => (int)Math.Ceiling((double)allStations.Count / pageSize);

    private string searchName = string.Empty;
    private string searchLocation = string.Empty;
    private string searchIsActive = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadStations();
        
        SignalRService.StationCreated += OnStationCreated;
        SignalRService.StationUpdated += OnStationUpdated;
        SignalRService.StationDeleted += OnStationDeleted;
        
        await SignalRService.StartAsync();
    }

    private async void OnStationCreated()
    {
        await InvokeAsync(async () =>
        {
            await LoadStations();
            StateHasChanged();
        });
    }

    private async void OnStationUpdated(int stationId)
    {
        await InvokeAsync(async () =>
        {
            await LoadStations();
            StateHasChanged();
        });
    }

    private async void OnStationDeleted(int stationId)
    {
        await InvokeAsync(async () =>
        {
            await LoadStations();
            StateHasChanged();
        });
    }

    public async ValueTask DisposeAsync()
    {
        SignalRService.StationCreated -= OnStationCreated;
        SignalRService.StationUpdated -= OnStationUpdated;
        SignalRService.StationDeleted -= OnStationDeleted;
        
        await SignalRService.StopAsync();
    }

    private async Task LoadStations()
    {
        isLoading = true;
        try
        {
            var result = await GraphQLConsumer.GetStationsAsync();
            allStations = result.ToList();
            UpdatePagedStations();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading stations: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task SearchStations()
    {
        isLoading = true;
        try
        {
            bool? isActiveValue = null;
            if (!string.IsNullOrWhiteSpace(searchIsActive))
            {
                isActiveValue = bool.Parse(searchIsActive);
            }

            var result = await GraphQLConsumer.SearchStationsAsync(
                string.IsNullOrWhiteSpace(searchName) ? null : searchName,
                string.IsNullOrWhiteSpace(searchLocation) ? null : searchLocation,
                isActiveValue
            );
            allStations = result.ToList();
            currentPage = 1;
            UpdatePagedStations();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error searching stations: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ClearSearch()
    {
        searchName = string.Empty;
        searchLocation = string.Empty;
        searchIsActive = string.Empty;
        await LoadStations();
    }

    private async Task HandleSearchKeyUp(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" || string.IsNullOrWhiteSpace(searchName) && string.IsNullOrWhiteSpace(searchLocation))
        {
            await SearchStations();
        }
        else if (!string.IsNullOrWhiteSpace(searchName) || !string.IsNullOrWhiteSpace(searchLocation))
        {
            await Task.Delay(500);
            await SearchStations();
        }
    }

    private async Task HandleSearchChange(ChangeEventArgs e)
    {
        searchIsActive = e.Value?.ToString() ?? string.Empty;
        await SearchStations();
    }

    private void UpdatePagedStations()
    {
        var skip = (currentPage - 1) * pageSize;
        stations = allStations.Skip(skip).Take(pageSize).ToList();
    }

    private void GoToPage(int page)
    {
        if (page >= 1 && page <= totalPages)
        {
            currentPage = page;
            UpdatePagedStations();
        }
    }

    private async Task DeleteStation(int id)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", 
            $"Are you sure you want to delete Station with ID {id}?");
        
        if (confirmed)
        {
            try
            {
                var result = await GraphQLConsumer.DeleteStationAsync(id);
                if (result)
                {
                    await LoadStations();
                }
                else
                {
                    await JSRuntime.InvokeVoidAsync("alert", "Failed to delete Station.");
                }
            }
            catch (Exception ex)
            {
                await JSRuntime.InvokeVoidAsync("alert", $"Error deleting Station: {ex.Message}");
                Console.WriteLine($"Error deleting Station: {ex.Message}");
            }
        }
    }
}

