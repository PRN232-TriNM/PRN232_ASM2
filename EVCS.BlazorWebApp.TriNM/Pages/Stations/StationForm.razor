@page "/Stations/Form"
@page "/Stations/Form/{Id:int}"
@using EVCS.BlazorWebApp.TriNM.GraphQLClient
@using EVCS.BlazorWebApp.TriNM.Models
@using Microsoft.AspNetCore.Components
@using System.ComponentModel.DataAnnotations
@inject GraphQLConsumer GraphQLConsumer
@inject NavigationManager Navigation

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">@(IsEdit ? "Edit Station" : "Create New Station")</h3>
                    <a href="/Stations" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle"></i> @errorMessage
                            <button type="button" class="btn-close" @onclick="() => errorMessage = string.Empty"></button>
                        </div>
                    }

                    @if (isLoading)
                    {
                        <div class="text-center">
                            <div class="spinner-border" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    }
                    else
                    {
                        <EditForm Model="station" OnValidSubmit="HandleSubmit" OnInvalidSubmit="HandleInvalidSubmit">
                            <DataAnnotationsValidator />
                            <ValidationSummary class="text-danger" />

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Station Code <span class="text-danger">*</span></label>
                                        <InputText class="form-control" @bind-Value="station.StationTriNMCode" />
                                        <ValidationMessage For="@(() => station.StationTriNMCode)" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Station Name <span class="text-danger">*</span></label>
                                        <InputText class="form-control" @bind-Value="station.StationTriNMName" />
                                        <ValidationMessage For="@(() => station.StationTriNMName)" />
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="mb-3">
                                        <label class="form-label">Address <span class="text-danger">*</span></label>
                                        <InputText class="form-control" @bind-Value="station.Address" />
                                        <ValidationMessage For="@(() => station.Address)" />
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">City</label>
                                        <InputText class="form-control" @bind-Value="station.City" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Province</label>
                                        <InputText class="form-control" @bind-Value="station.Province" />
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Latitude</label>
                                        <InputNumber class="form-control" @bind-Value="station.Latitude" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Longitude</label>
                                        <InputNumber class="form-control" @bind-Value="station.Longitude" />
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Capacity <span class="text-danger">*</span></label>
                                        <InputNumber class="form-control" @bind-Value="station.Capacity" />
                                        <ValidationMessage For="@(() => station.Capacity)" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Owner <span class="text-danger">*</span></label>
                                        <InputText class="form-control" @bind-Value="station.Owner" />
                                        <ValidationMessage For="@(() => station.Owner)" />
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Contact Phone</label>
                                        <InputText class="form-control" @bind-Value="station.ContactPhone" />
                                        <ValidationMessage For="@(() => station.ContactPhone)" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Contact Email</label>
                                        <InputText type="email" class="form-control" @bind-Value="station.ContactEmail" />
                                        <ValidationMessage For="@(() => station.ContactEmail)" />
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="mb-3">
                                        <label class="form-label">Description</label>
                                        <InputTextArea class="form-control" rows="3" @bind-Value="station.Description" />
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="mb-3">
                                        <label class="form-label">Image URL</label>
                                        <InputText class="form-control" @bind-Value="station.ImageURL" />
                                    </div>
                                </div>
                            </div>

                            @if (IsEdit)
                            {
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="mb-3">
                                            <div class="form-check">
                                                <InputCheckbox class="form-check-input" @bind-Value="station.IsActive" />
                                                <label class="form-check-label">Active</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                            <div class="d-flex justify-content-end gap-2">
                                <a href="/Stations" class="btn btn-secondary">Cancel</a>
                                <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                                    @if (isSubmitting)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                    }
                                    <i class="fas fa-save"></i> @(IsEdit ? "Update" : "Create")
                                </button>
                            </div>
                        </EditForm>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private StationTriNM station = new();
    private bool isLoading = false;
    private bool isSubmitting = false;
    private string errorMessage = string.Empty;
    private bool IsEdit => Id > 0;

    protected override async Task OnInitializedAsync()
    {
        if (IsEdit)
        {
            await LoadStation();
        }
        else
        {
            station.IsActive = true;
            station.Capacity = 1;
        }
    }

    private async Task LoadStation()
    {
        isLoading = true;
        try
        {
            var loadedStation = await GraphQLConsumer.GetStationByIdAsync(Id);
            if (loadedStation != null)
            {
                station = loadedStation;
            }
            else
            {
                errorMessage = "Station not found.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading Station: {ex.Message}";
            Console.WriteLine($"Error loading Station: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void HandleInvalidSubmit()
    {
        Console.WriteLine("Form validation failed!");
        errorMessage = "Please fix validation errors before submitting.";
    }

    private async Task HandleSubmit()
    {
        isSubmitting = true;
        errorMessage = string.Empty;

        try
        {
            Console.WriteLine($"HandleSubmit called - IsEdit: {IsEdit}, StationTriNMId: {station.StationTriNMId}");
            
            if (IsEdit)
            {
                Console.WriteLine($"Updating Station {station.StationTriNMId}: {station.StationTriNMName}");
                var result = await GraphQLConsumer.UpdateStationAsync(station);
                Console.WriteLine($"Update result: {(result != null ? "Success" : "Failed")}");
                
                if (result != null)
                {
                    Navigation.NavigateTo($"/Stations/{Id}");
                }
                else
                {
                    errorMessage = "Failed to update Station. Please check the console for details.";
                }
            }
            else
            {
                station.CurrentAvailable = station.Capacity;
                Console.WriteLine($"Creating new Station: {station.StationTriNMName}");
                var result = await GraphQLConsumer.CreateStationAsync(station);
                Console.WriteLine($"Create result: {(result != null ? "Success" : "Failed")}");
                
                if (result != null)
                {
                    Navigation.NavigateTo($"/Stations/{result.StationTriNMId}");
                }
                else
                {
                    errorMessage = "Failed to create Station. Please check the console for details.";
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
            Console.WriteLine($"Error in HandleSubmit: {ex.Message}");
            Console.WriteLine($"Stack trace: {ex.StackTrace}");
            if (ex.InnerException != null)
            {
                Console.WriteLine($"Inner exception: {ex.InnerException.Message}");
            }
        }
        finally
        {
            isSubmitting = false;
        }
    }
}

