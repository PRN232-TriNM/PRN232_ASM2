@page "/login"
@using EVCS.BlazorWebApp.TriNM.Services
@using EVCS.BlazorWebApp.TriNM.GraphQLClient
@using Microsoft.JSInterop
@using System.ComponentModel.DataAnnotations
@inject AuthenticationService AuthService
@inject GraphQLConsumer GraphQLConsumer
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@implements IAsyncDisposable

<PageTitle>Login - EVCS</PageTitle>

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <h3 class="card-title">
                            <i class="bi bi-person-circle"></i> Login
                        </h3>
                        <p class="text-muted">Electric Vehicle Charging System</p>
                    </div>

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill"></i> @errorMessage
                            <button type="button" class="btn-close" @onclick="() => errorMessage = string.Empty"></button>
                        </div>
                    }

                    <EditForm Model="loginModel" OnValidSubmit="HandleLogin">
                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <label for="email" class="form-label">
                                <i class="bi bi-envelope-fill"></i> Email
                            </label>
                            <InputText 
                                id="email" 
                                type="email"
                                class="form-control" 
                                @bind-Value="loginModel.Email" 
                                placeholder="Enter email"
                                disabled="@isLoading" />
                            <ValidationMessage For="@(() => loginModel.Email)" />
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">
                                <i class="bi bi-lock-fill"></i> Password
                            </label>
                            <InputText 
                                id="password" 
                                type="password" 
                                class="form-control" 
                                @bind-Value="loginModel.Password" 
                                placeholder="Enter password"
                                disabled="@isLoading" />
                            <ValidationMessage For="@(() => loginModel.Password)" />
                        </div>

                        <div class="mb-3 form-check">
                            <InputCheckbox 
                                id="rememberMe" 
                                class="form-check-input" 
                                @bind-Value="loginModel.RememberMe"
                                disabled="@isLoading" />
                            <label class="form-check-label" for="rememberMe">
                                Remember me
                            </label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary" disabled="@isLoading">
                                @if (isLoading)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                    <span>Logging in...</span>
                                }
                                else
                                {
                                    <i class="bi bi-box-arrow-in-right"></i>
                                    <span> Login</span>
                                }
                            </button>
                        </div>
                    </EditForm>

                    <div class="text-center mt-3">
                        <small class="text-muted">
                            Enter your email and password to login
                        </small>
                    </div>

                    <div class="text-center mt-3">
                        <div class="divider">
                            <span>OR</span>
                        </div>
                        <div id="google-signin-button-login" class="mt-3"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 15px;
    }

    .card-body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 15px;
        color: white;
    }

    .form-label {
        color: white;
        font-weight: 500;
    }

    .form-control {
        border-radius: 8px;
        border: 2px solid rgba(255, 255, 255, 0.3);
        background-color: rgba(255, 255, 255, 0.9);
    }

    .form-control:focus {
        border-color: white;
        box-shadow: 0 0 0 0.2rem rgba(255, 255, 255, 0.25);
    }

    .btn-primary {
        background: white;
        color: #667eea;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        padding: 10px;
    }

    .btn-primary:hover:not(:disabled) {
        background: #f8f9fa;
        color: #764ba2;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .btn-primary:disabled {
        background: rgba(255, 255, 255, 0.6);
        color: #999;
    }

    .alert {
        border-radius: 8px;
    }

    .text-muted {
        color: rgba(255, 255, 255, 0.8) !important;
    }

    .form-check-label {
        color: white;
    }

    .form-check-input {
        border: 2px solid rgba(255, 255, 255, 0.5);
    }

    .form-check-input:checked {
        background-color: white;
        border-color: white;
    }

    .divider {
        position: relative;
        text-align: center;
        margin: 20px 0;
    }

    .divider::before,
    .divider::after {
        content: '';
        position: absolute;
        top: 50%;
        width: 45%;
        height: 1px;
        background: rgba(255, 255, 255, 0.3);
    }

    .divider::before {
        left: 0;
    }

    .divider::after {
        right: 0;
    }

    .divider span {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 0 15px;
        position: relative;
        color: white;
    }

    #google-signin-button-login {
        display: flex;
        justify-content: center;
    }
</style>

@code {
    private LoginModel loginModel = new();
    private string errorMessage = string.Empty;
    private bool isLoading = false;
    private DotNetObjectReference<Login>? objRef;

    protected override async Task OnInitializedAsync()
    {
        var isAuthenticated = await AuthService.IsAuthenticatedAsync();
        if (isAuthenticated)
        {
            NavigationManager.NavigateTo("/");
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            objRef = DotNetObjectReference.Create(this);
            await Task.Delay(100);
            try
            {
                await JSRuntime.InvokeVoidAsync("setupGoogleSignIn", 
                    objRef,
                    "google-signin-button-login");
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error setting up Google Sign-In: {ex.Message}");
            }
        }
    }

    [JSInvokable]
    public async Task HandleGoogleCredential(string credential)
    {
        if (objRef == null)
        {
            Console.WriteLine("DotNetObjectReference is null, cannot handle credential");
            return;
        }

        try
        {
            if (string.IsNullOrEmpty(credential))
            {
                errorMessage = "Failed to receive credential from Google";
                StateHasChanged();
                return;
            }

            isLoading = true;
            errorMessage = string.Empty;
            StateHasChanged();

            var result = await GraphQLConsumer.GoogleLoginAsync(credential);
            
            if (result.Success && !string.IsNullOrEmpty(result.Token))
            {
                var loginSuccess = await AuthService.LoginAsync(result.Token);
                if (loginSuccess)
                {
                    await Task.Delay(100);
                    NavigationManager.NavigateTo("/", forceLoad: true);
                }
                else
                {
                    errorMessage = "Failed to save login token";
                    StateHasChanged();
                }
            }
            else
            {
                errorMessage = result.Error ?? "Google login failed";
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Google login error: " + ex.Message;
            Console.WriteLine($"Error in Google login: {ex.Message}");
            Console.WriteLine($"Stack trace: {ex.StackTrace}");
            StateHasChanged();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    public async ValueTask DisposeAsync()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("cleanupGoogleSignIn", "google-signin-button-login");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error cleaning up Google Sign-In: {ex.Message}");
        }
        finally
        {
            if (objRef != null)
            {
                objRef.Dispose();
                objRef = null;
            }
        }
    }

    private async Task HandleLogin()
    {
        try
        {
            isLoading = true;
            errorMessage = string.Empty;

            var result = await GraphQLConsumer.LoginAsync(loginModel.Email, loginModel.Password);

            if (result.Success && !string.IsNullOrEmpty(result.Token))
            {
                await AuthService.LoginAsync(result.Token);
                NavigationManager.NavigateTo("/");
            }
            else
            {
                errorMessage = result.Error ?? "Invalid email or password";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "An error occurred during login. Please try again.";
            Console.WriteLine($"Login error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    public class LoginModel
    {
        [Required(ErrorMessage = "Email is required")]
        [EmailAddress(ErrorMessage = "Invalid email format")]
        public string Email { get; set; } = string.Empty;

        [Required(ErrorMessage = "Password is required")]
        public string Password { get; set; } = string.Empty;

        public bool RememberMe { get; set; }
    }
}

